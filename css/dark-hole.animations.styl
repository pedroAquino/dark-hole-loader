
//----- ANIMATIONS

.trans-mask
  transition: background, 1s, linear

@keyframes scaleSpiner
  0%
    width: spinnerSmWidth
    height: spinnerSmHeight
    left: 50%
    top: 50%
  100%
    width: 100px
    height: 100px
    left: 20px
    top: 50px
 
.a-spinner-sm
  animation-name: scaleSpiner
  animation-duration: 1s
  animation-iteration-count: infinite
  animation-direction: alternate
  animation-delay: .5s